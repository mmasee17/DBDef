package Code;

import java.util.ArrayList;


	public class DBDef { // contiendra les info du shéma pour l'ensemble de la BDD

	static DBDef dbdef;
	private ArrayList <RelDef> reldef;
	private int compteur; // un compteur de relation

	public DBDef() {
		
		reldef= new ArrayList<RelDef>(); // pour pouvoir l'utiliser
	}
	
	
	public static void Init () { // pour l'initialisation d'une instance // les mettre en singleton ?
		
	}
	
	public static void Finish () { // s'occupe du ménage ? 
		
	}
	
	public void AddRelation (RelDef r) { 
		
		reldef.add(r); // ajouter l'argument a la liste (je pense que c'est pas ça XD)
		reldef.set(compteur, r); // actualiser le compteur ? ( idem ...) 
		
	}
}
